rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data.
    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // A user can create a submission and can only read their own submissions.
    match /farmerSubmissions/{submissionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // No one can update or delete submissions to preserve history.
      allow update, delete: if false;
    }
  }
}
