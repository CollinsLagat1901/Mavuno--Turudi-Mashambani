rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // A user can create a submission for themselves
    match /farmerSubmissions/{submissionId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // A user can only read insights that belong to them
    match /aiInsights/{insightId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
       // Creating insights should ideally be done via a trusted server/cloud function
      allow create: if request.auth != null; // For now, allow creation by authenticated user
    }
  }
}
