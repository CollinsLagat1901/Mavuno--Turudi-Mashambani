rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and write their own data.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Users can create their own submissions.
    // Users can only read their own submissions.
    match /farmerSubmissions/{submissionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && get(/databases/$(database)/documents/farmerSubmissions/$(submissionId)).data.userId == request.auth.uid;
    }

    // Users can create their own insights document (this would be done via a trusted server/function).
    // Users can only read their own insights.
    match /aiInsights/{insightId} {
       allow create: if request.auth != null; // Ideally restricted to server role
       allow read: if request.auth != null && get(/databases/$(database)/documents/aiInsights/$(insightId)).data.userId == request.auth.uid;
    }
  }
}
